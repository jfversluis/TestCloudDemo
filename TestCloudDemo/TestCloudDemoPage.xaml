<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:TestCloudDemo" x:Class="TestCloudDemo.TestCloudDemoPage">
	<StackLayout VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300">
		<Label x:Name="ResultLabel" AutomationId="ResultLabel" Text="Test me!" />
		<Button AutomationId="SucceedButton" Text="This test will succeed" TextColor="White" BackgroundColor="Green" BorderColor="Green" BorderRadius="10" Clicked="Succeed_Clicked" />
		<Button AutomationId="FailButton" Text="This test will fail" TextColor="White" BackgroundColor="Red" BorderColor="Red" BorderRadius="10" Clicked="Failed_Clicked" />
	</StackLayout>
</ContentPage>